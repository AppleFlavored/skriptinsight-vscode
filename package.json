{
    "name": "skriptinsight-vscode",
    "displayName": "Skript Language Support",
    "version": "1.0.0",
    "author": "AppleFlavored",
    "license": "MIT",
    "main": "./out/extension",
    "repository": {
        "type": "git",
        "url": "https://github.com/AppleFlavored/skriptinsight-vscode.git"
    },
    "engines": {
        "vscode": "^1.63.0"
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w"
    },
    "dependencies": {
        "vscode-languageclient": "^8.0.1"
    },
    "devDependencies": {
        "@types/node": "^17.0.43",
        "@types/vscode": "^1.68.0",
        "typescript": "^4.7.3"
    },
    "activationEvents": [
        "onLanguage:skript"
    ],
    "contributes": {
        "languages": [
            {
                "id": "skript",
                "extensions": [
                    ".sk"
                ],
                "configuration": "./language-configuration.json"
            }
        ]
    }
}
